<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E9EDEBEB">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="198dp">

        <EditText
            android:id="@+id/idobat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameform"
            android:hint="Id Obat"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/stok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idobat"
            android:hint="Stok"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stok"
            android:hint="Informasi Obat"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <Button
            android:id="@+id/updateobat"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#229E25"
            android:text="Masukan Data"
            android:textSize="12dp" />


    </LinearLayout>

    <View
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape1"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/nameform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Update Obat"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="139dp" />


</androidx.constraintlayout.widget.ConstraintLayout>