<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E9EDEBEB">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="111dp">

        <EditText
            android:id="@+id/idpasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameform"
            android:hint="id_pasien"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/namapenyakit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idpasien"
            android:hint="Nama Penyakit"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/jenispenyakit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namapenyakit"
            android:hint="Jenis Penyakit"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/jenispenyakit"
            android:hint="Tanggal Diagnosa"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/diagnosa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tanggal"
            android:hint="Diagnosa"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/idapoteker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/diagnosa"
            android:hint="ID Apoteker"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idapoteker"
            android:hint="Status"
            android:textColor="@color/black"
            android:textSize="12dp" />
        <EditText
            android:id="@+id/idobat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status"
            android:hint="Id Obat"
            android:textColor="@color/black"
            android:textSize="12dp" />
        <EditText
            android:id="@+id/namaobat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idobat"
            android:hint="Nama Obat"
            android:textColor="@color/black"
            android:textSize="12dp" />
        <EditText
            android:id="@+id/dosisobat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namaobat"
            android:hint="Dosis Obat"
            android:textColor="@color/black"
            android:textSize="12dp" />
        <EditText
            android:id="@+id/waktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dosisobat"
            android:hint="waktu"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <Button
            android:id="@+id/masukankesehatan"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#229E25"
            android:text="Masukan Data"
            android:textSize="12dp" />


    </LinearLayout>

    <View
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape1"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/nameform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Masukan Data Kesehatan dan Jadwal"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="56dp"
        tools:layout_editor_absoluteY="65dp" />


</androidx.constraintlayout.widget.ConstraintLayout>